<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditarLivro</servlet-name>
        <jsp-file>/EditarLivro.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditarLivro</servlet-name>
        <url-pattern>/editarlivro</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>editarPerfil</servlet-name>
        <jsp-file>/editar_perfil.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>editarPerfil</servlet-name>
        <url-pattern>/editarPerfil</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>admLivro</servlet-name>
        <jsp-file>/cadastrarLivro.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>admLivro</servlet-name>
        <url-pattern>/admLivro</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>verPerfil</servlet-name>
        <jsp-file>/perfilPessoa.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>verPerfil</servlet-name>
        <url-pattern>/verPerfil</url-pattern>
    </servlet-mapping>
    <error-page>
        <!--<description>Erro no cadastro - ISBN existente</description>-->
        <!--<description>Erro ISBN</description>-->
        <exception-type>br.edu.ifpb.sislivros.exceptions.LivroExistenteException</exception-type>
        <location>/errorPageISBN.html</location>
    </error-page>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>br.edu.ifpb.sislivros.controle.Controller2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>FilterLoggedPages</filter-name>
        <filter-class>br.edu.ifpb.sislivros.filters.FilterLoggedPages</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterLoggedPages</filter-name>
        <servlet-name>index</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterLoggedPages</filter-name>
        <servlet-name>home</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterLoggedPages</filter-name>
        <servlet-name>verPerfil</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterLoggedPages</filter-name>
        <servlet-name>admLivro</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterLoggedPages</filter-name>
        <servlet-name>editarPerfil</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterLoggedPages</filter-name>
        <servlet-name>EditarLivro</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
<!--    <filter-mapping>
        <filter-name>FilterLoggedPages</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>-->
    
    <filter>
        <filter-name>UsuarioLogado</filter-name>
        <filter-class>br.edu.ifpb.sislivros.filters.UsuarioLogado</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UsuarioLogado</filter-name>
        <servlet-name>Controller</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    
    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>
</web-app>
